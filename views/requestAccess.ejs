<%- include('./layout/header') %>

  <link href="/css/login.css" rel="stylesheet" />

  <h1 class="reqTitle title headerFont semi-bold" style="margin-bottom: 20px; max-width: 600px;">Data Input User Request Form</h1>

  <div class="feedbackWrap">
    <% if (error) { %>
      <div class="alert alert-danger <%= error ? 'displayAlert' : '' %>">
        <%= error %>
      </div>
    <% } %>
  </div>

  <form action="/admin/register" method="POST" class="requestAccessWrap">
    <input type="email" required id="exampleInputEmail1" name="email" placeholder="Enter email" />
    <input type="text" required name="username" id="username" placeholder="Enter username" />
    <input type="password" name="password" required id="exampleInputPassword1" placeholder="Password" />
    <textarea
      id="input-text"
      class="textArea"
      rows="4"
      placeholder="Tell us why you'd like to help"
    ></textarea>
    <button type="submit" class="btn submitBtn semi-bold hoverable hoverableBtn" style="box-sizing: border-box;">Submit</button>
  </form>

<%- include('./layout/footer') %>