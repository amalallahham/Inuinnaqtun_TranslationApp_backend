<%- include('./layout/header_auth') %>

  <div class="container my-4 px-5">
    <div class="d-flex align-items-center justify-content-between">
      <h2 class="mb-3 semi-bold">Data Input Users</h2>

      <!-- Add User Button (Opens Modal) -->
      <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#inviteUserModal">
        Add User
      </button>
    </div>

    <div class="card">
      <div class="card-body p-0">
        <% if (typeof error !=="undefined" && error) { %>
          <div class="alert alert-danger">
            <%= error %>
          </div>
        <% } %>

        <table class="table table-hover my-2">
          <thead>
            <tr>
              <th class="px-4">ID</th>
              <th>Email</th>
              <th>Username</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="userTableBody">
            <% if (users.length===0) { %>
              <tr>
                <td colspan="5" class="text-center">No users found</td>
              </tr>
            <% } else { %>
              <% users.forEach((ele, index)=> { %>
                <% if (ele.role === "DataEntry") { %>
                  <tr class="user-row">
                    <td class="px-4">
                      <%= index + 1 %>
                    </td>
                    <td>
                      <%= ele.email %>
                    </td>
                    <td>
                      <%= ele.username %>
                    </td>
                    <td>
                      <a href="/admin/users/edit/<%= ele._id %>" class="btn btn-warning btn-sm">Edit</a>

                      <% if (ele.email !==userEmail) { %>
                        <button class="btn btn-danger btn-sm"
                          onclick="showDeleteModal('<%= ele._id %>', '<%= ele.email %>')" data-bs-toggle="modal"
                          data-bs-target="#deleteUserModal">
                          Delete
                        </button>
                      <% } %>
                    </td>
                  </tr>
                <% } %>
              <% }) %>
            <% } %>
          </tbody>
        </table>

        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-end m-4">
            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
              <a class="page-link" href="/admin/users?page=<%= currentPage - 1 %>">Previous</a>
            </li>
            <% for (let i=1; i <=totalPages; i++) { %>
              <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="/admin/users?page=<%= i %>">
                  <%= i %>
                </a>
              </li>
            <% } %>
            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
              <a class="page-link" href="/admin/users?page=<%= currentPage + 1 %>">Next</a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>

