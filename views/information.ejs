<%- include('./layout/header_auth') %>

<div class="container my-4 px-5">
    <div class="d-flex align-items-center justify-content-between">
        <h2 class="mb-3 semi-bold">Information Management</h2>

        <!-- Add Info Button -->
        <a href="/admin/information/add_info" class="btn btn-primary mb-3">Add Information</a>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <% if (typeof error !== "undefined" && error) { %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>

            <table class="table table-hover my-2">
                <thead>
                    <tr>
                        <th class="px-4">#</th>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Created By</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data.length === 0) { %>
                        <tr>
                            <td colspan="6" class="text-center">No information entries found</td>
                        </tr>
                    <% } else { %>
                        <% data.forEach((info, index) => { %>
                            <tr>
                                <td class="px-4"><%= index + 1 %></td>
                                <td><%= info.title %></td>
                                <td><%= info.status %></td>
                                <td><%= info.createdBy?.username || 'N/A' %></td>
                                <td><%= info.createdAt.toLocaleDateString() %></td>
                                <td>
                                    <a href="/admin/information/<%= info._id %>" class="btn btn-info btn-sm">View</a>
                                    <a href="/admin/information/<%= info._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                                    <form action="/admin/information/<%= info._id %>/delete" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('./layout/footer_auth') %>
