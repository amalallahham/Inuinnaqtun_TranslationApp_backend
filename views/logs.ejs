<%- include('./layout/header_auth') %>

<div class="my-4 px-4">
  <div class="d-flex align-items-center justify-content-between flex-wrap">
    <h2 class="mb-3 fw-semibold">Logs</h2>
  </div>

  <form action="/admin/logs" method="GET" class="card shadow-sm p-3 mb-4">
    <div class="row gy-3">
      <div class="col-md-12">
        <label class="form-label fw-semibold">Category</label>
        <div
          class="btn-group flex-wrap"
          role="group"
          aria-label="Category filter"
        >
          <% const categories = ['All', 'Edit', 'Flag', 'Delete', 'Upload',
          'Translation', 'Audio']; %> <% categories.forEach(cat => { const
          isType = ['Translation', 'Audio'].includes(cat); const inputName =
          isType ? 'type' : 'action'; const inputValue = cat === 'All' ? '' :
          cat.toLowerCase(); const checked = (inputName === 'action' &&
          ((!actionFilter && cat === 'All') || actionFilter === inputValue)) ||
          (inputName === 'type' && typeFilter === inputValue); %> <input
          type="radio" class="btn-check" name="<%= inputName %>"
          id="filter-<%=cat%>" autocomplete="off" value="<%= inputValue %>" <%=
          checked ? 'checked' : '' %> >
          <label
            class="btn btn-outline-primary rounded-pill m-1"
            for="filter-<%=cat%>"
            ><%= cat %></label
          >

          <% }) %>
        </div>
      </div>

      <!-- Order By -->
      <div class="col-md-12">
        <label class="form-label fw-semibold">Order By</label>
        <div class="btn-group flex-wrap" role="group" aria-label="Order filter">
          <input type="radio" class="btn-check" name="order" id="newest"
          autocomplete="off" value="desc" <%= order === 'desc' ? 'checked' : ''
          %>>
          <label class="btn btn-outline-primary rounded-pill m-1" for="newest"
            >Newest to Oldest</label
          >

          <input type="radio" class="btn-check" name="order" id="oldest"
          autocomplete="off" value="asc" <%= order === 'asc' ? 'checked' : ''
          %>>
          <label class="btn btn-outline-primary rounded-pill m-1" for="oldest"
            >Oldest to Newest</label
          >
        </div>
      </div>

      <div class="col-md-12 text-end">
        <button class="btn btn-secondary px-4" type="submit">Apply</button>
      </div>
    </div>
  </form>

  <!-- Logs Table -->
  <div class="card shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover m-0">
          <thead class="table-light">
            <tr>
              <th class="px-4">Action</th>
              <th>Description</th>
              <th>Type</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% if (logs.length === 0) { %>
            <tr>
              <td colspan="4" class="text-center text-muted py-3">
                No logs found.
              </td>
            </tr>
            <% } %> <% logs.forEach(log => { %>
            <tr
              class="log-row"
              style="cursor: pointer"
              data-log-id="<%= log._id %>"
            >

           
              <td class="px-4"><%= log.action %></td>
              <td><%= log.description %></td>
              <td><%= log.type %></td>
              <td><%= new Date(log.createdAt).toLocaleString() %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="d-flex justify-content-between align-items-center p-3">
        <p class="mb-0">Page <%= currentPage %> of <%= totalPages %></p>

        <div>
          <% if (currentPage > 1) { %>
          <a
            href="?page=<%= currentPage - 1 %>&action=<%= actionFilter %>&order=<%= order %>"
            class="btn btn-outline-primary"
            >Previous</a
          >
          <% } %> <% if (currentPage < totalPages) { %>
          <a
            href="?page=<%= currentPage + 1 %>&action=<%= actionFilter %>&order=<%= order %>"
            class="btn btn-outline-primary"
            >Next</a
          >
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./layout/footer_auth') %>

<script>
    document.addEventListener("DOMContentLoaded", () => {
      document.querySelectorAll(".log-row").forEach(row => {
        row.addEventListener("click", () => {
          const logId = row.getAttribute("data-log-id");
          window.location.href = `/admin/logs/${logId}`;
        });
      });
    });
  </script>
  
  <%- include('./layout/footer_auth') %>
  
