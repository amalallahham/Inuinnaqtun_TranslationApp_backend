<%- include('./layout/header') %>
<link href="/css/login.css" rel="stylesheet" />

<div class="align-items-center justify-content-center d-flex margin-top-fi">
  <div class="card border-0 w-fit p-4 min-width">
    <div class="card-body">
      <h1 class="semi-bold mb-4">Reset Your Password</h1>

      <% if (error) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>

      <% if (success) { %>
        <div class="text-center mt-3">
          <div class="mb-3">
            <i class="fa fa-check-circle text-success" style="font-size: 50px;"></i>
          </div>
          <p class="text-success"><%= success %></p>
          <a href="/admin/login" class="btn btn-primary">Go to Login</a>
        </div>
      <% } else { %>
        <p class="mb-3">
          Enter your new password below.
        </p>

        <form action="/admin/reset-password" method="POST">
          <input type="hidden" name="token" value="<%= token %>" />

          <div class="form-group mb-3">
            <label for="password">New Password</label>
            <input
              required
              type="password"
              class="form-control"
              name="password"
              id="password"
              placeholder="Enter new password"
            />
          </div>

          <div class="form-group mb-3">
            <label for="confirmPassword">Confirm Password</label>
            <input
              required
              type="password"
              class="form-control"
              name="confirmPassword"
              id="confirmPassword"
              placeholder="Confirm new password"
            />
          </div>

          <button type="submit" class="btn btn-primary">Reset Password</button>
        </form>
      <% } %>
    </div>
  </div>
</div>

<%- include('./layout/footer') %>
